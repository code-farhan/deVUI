<style>
    nav{
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 1rem;
        height: 4rem;
        background-color: transparent;
        font-family: sans-serif
    }
    nav img{
        width: 3.75rem;
    }
    .nav-links {
        display: flex;
        gap: 6%;
        justify-content: flex-end;
