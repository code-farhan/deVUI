    nav a{
        box-sizing: border-box;
        text-decoration: none;
        color: #000;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }
    nav a.active{
        font-weight: 700;
        color: var(--c-green);
    }
    nav a:hover{
        text-decoration: underline;
    }
    .button{
        all: unset;
        width: 10rem;
        font-size: 0.93rem;
